{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "postCreateCommand": [
    "git submodule update --init",
    "cd design-system && git checkout master && cd ..",
    "cd design-system && npm install",
    "cd taskist && npm install"
  ],
  "customizations": {
    "codespaces": {
      "repositories": {
        "mjwsteenbergen/design-system": {
          "permissions": "write-all"
        }
      }
    }
  }
}